/************************************** IOMUX (settings for digital GPIO that are NOT claimed by drivers) *****************************************/
/*
IOMUXC
------
Pad-mux control register controls the IOMUX of the given pad(=pin).
Bit[29:27] represents the 'mux_control' field.
E.g. the mask is as follows for MUX<n> setting:
MUX0 = 0x00000000
MUX1 = 0x08000000
MUX2 = 0x10000000
MUX3 = 0x18000000
MUX4 = 0x20000000 --> pinmux=4 : LSGPIO setting (if available)
MUX5 = 0x28000000
MUX6 = 0x30000000
MUX7 = 0x38000000
*/
&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_expansion>;

	/* Expansion Connector */
	pinctrl_expansion: expansiongrp {
		fsl,pins = <
			/************ MUX0 (ADC0) select-signals **************/
			/* IO4.31 */
			IMX8QXP_ENET0_RGMII_TXD0_LSIO_GPIO4_IO31    0x26000060
			/* IO5.0 */
			IMX8QXP_ENET0_RGMII_TXD1_LSIO_GPIO5_IO00    0x26000060
			/* IO5.1 */
			IMX8QXP_ENET0_RGMII_TXD2_LSIO_GPIO5_IO01    0x26000060
			/* IO5.2 */
			IMX8QXP_ENET0_RGMII_TXD3_LSIO_GPIO5_IO02    0x26000060
			
			/************ MUX1 (ADC1) select-signals **************/
			/* IO4.29 */
			IMX8QXP_ENET0_RGMII_TXC_LSIO_GPIO4_IO29         0x26000060
			/* IO4.30 */
			IMX8QXP_ENET0_RGMII_TX_CTL_LSIO_GPIO4_IO30      0x26000060
			/* IO5.4 */
			IMX8QXP_ENET0_RGMII_RX_CTL_LSIO_GPIO5_IO04      0x26000060
			/* IO5.3 */
			IMX8QXP_ENET0_RGMII_RXC_LSIO_GPIO5_IO03         0x26000060
			
			/************ Outlet_A Relays ************************/
			/* IO3.16 */
			IMX8QXP_QSPI0A_SCLK_LSIO_GPIO3_IO16             0x26000060
			/* IO1.19 */
			IMX8QXP_FLEXCAN2_RX_LSIO_GPIO1_IO19             0x26000060
			/* IO1.20 */
			IMX8QXP_FLEXCAN2_TX_LSIO_GPIO1_IO20             0x26000060
			/* IO1.17 */
			IMX8QXP_FLEXCAN1_RX_LSIO_GPIO1_IO17             0x26000060
			/* IO1.18 */
			IMX8QXP_FLEXCAN1_TX_LSIO_GPIO1_IO18             0x26000060
			/* IO1.15 */
			IMX8QXP_FLEXCAN0_RX_LSIO_GPIO1_IO15             0x26000060
			/* IO1.16 */
			IMX8QXP_FLEXCAN0_TX_LSIO_GPIO1_IO16             0x26000060
			/* IO0.19 */
			IMX8QXP_MCLK_IN0_LSIO_GPIO0_IO19                0x26000060
			
			/**************** Outlet_B Relays ********************/
			/* IO3.14 */
			IMX8QXP_QSPI0A_SS0_B_LSIO_GPIO3_IO14            0x26000060
			/* IO5.5 */
			IMX8QXP_ENET0_RGMII_RXD0_LSIO_GPIO5_IO05        0x26000060
			/* IO5.6 */
			IMX8QXP_ENET0_RGMII_RXD1_LSIO_GPIO5_IO06        0x26000060
			/* IO5.7 = signal 'S3_1' */
			IMX8QXP_ENET0_RGMII_RXD2_LSIO_GPIO5_IO07        0x26000060
			/* IO5.8 */
			IMX8QXP_ENET0_RGMII_RXD3_LSIO_GPIO5_IO08        0x26000060
			/* IO5.9 */
			IMX8QXP_ENET0_REFCLK_125M_25M_LSIO_GPIO5_IO09   0x26000060
			/* IO5.10 */
			IMX8QXP_ENET0_MDIO_LSIO_GPIO5_IO10    	  0x26000060
			/* IO5.11 */
			IMX8QXP_ENET0_MDC_LSIO_GPIO5_IO11               0x26000060
			
			/*************** EXT-outlet Relay control ******************/
            /* 'S_Ex_contact_control' = IO1.31 */
			IMX8QXP_MIPI_DSI1_GPIO0_00_LSIO_GPIO1_IO31      0x26000060
			
			/*************** Board sensors --> probably belongs in DTSI-file *************************/
			/* INT_ACC = IO9.2 --> MCA_IO2 */
			/* INT_TEMP = IO9.3 --> MCA_IO3 */
			
			/*************** Backlight controls --> probably belongs in DTSI-file *************************/
			/* BACKLIGHT_FAULT = IO9.4 --> MCA_IO4 */
			    
			/*************** Outlet_A alarms *************************/
			/* AC_ALARM_A = IO9.9 --> MCA_IO9 */
			/* DC_ALARM_A = IO9.10 --> MCA_IO10 */
			
            /*************** Outlet_B alarms *************************/
			/* AC_ALARM_B = IO9.9 --> MCA_IO9 */
			/* DC_ALARM_B = IO9.10 --> MCA_IO10 */
			
			/*************** MCP23018 GPIO-expander control --> probably belongs in DTSI-file *************************/
			/* RESET_MCP_io_expander = IO3.15 */
			IMX8QXP_QSPI0A_SS1_B_LSIO_GPIO3_IO15        0x26000060
			
			/***************** Tricolor-LED Control **********************/
			/* 'LED_CLK' = IO4.19 */
			// IMX8QXP_USDHC1_RESET_B_LSIO_GPIO4_IO19      0x26000060           /* NOTE: set up as SPI2 clock ('SCK')! GPIO bit-bang NOT used!! */
			/* 'LED_SDO' = IO4.20 */
			// IMX8QXP_USDHC1_VSELECT_LSIO_GPIO4_IO20      0x26000060           /* NOTE: set up as SPI2 'DOUT'! GPIO bit-bang NOT used!! */
			
			/***************** USB --> probably belongs in DTSI-file **********************/
			/* 'USB_EN' = IO1.28 */
			IMX8QXP_MIPI_DSI0_GPIO0_01_LSIO_GPIO1_IO28  0x26000060
			/* 'USB_RESET' = IO3.13 */
			IMX8QXP_QSPI0A_DQS_LSIO_GPIO3_IO13          0x26000060
			 
            		/***************** LTE-modem --> probably belongs in DTSI-file **********************/
            		/* 'nDisable_LTE_SHDN' ('nDISABLE'?) = IO2.0 */
			//IMX8QXP_MIPI_DSI1_GPIO0_01_LSIO_GPIO2_IO00    0x26000060
			
			/********************** NFC --> probably belongs in DTSI-file (??) NOT USED IN VER.1 !! *******************************/
			/* 'NFC_POWER_TX' = IO1.29 */
			IMX8QXP_MIPI_DSI1_I2C0_SCL_LSIO_GPIO1_IO29    0x26000060
			/* 'POWER_ON_NFC' = IO1.30 */
			IMX8QXP_MIPI_DSI1_I2C0_SDA_LSIO_GPIO1_IO30    0x26000060
			/* 'NFC_IRQ_IN' = IO4.22 */
			IMX8QXP_USDHC1_CD_B_LSIO_GPIO4_IO22           0x26000060
			/* 'NFC_IRQ_OUT' = MCA_IO1 = GPIO9_1 --> need NOT be part of DTS as long as userspace controls it! */
		>;
	};

	/* i.MX8X internal (12-bit, Vref=1.8V) ADC. Uncomment the pads you wish to use as ADC-inputs: */
	pinctrl_adc0: adc0grp {
		fsl,pins = <
			/* ADC_IN0 */
			IMX8QXP_ADC_IN0_ADMA_ADC_IN0		0xc0000060
			/* ADC_IN1 */
			IMX8QXP_ADC_IN1_ADMA_ADC_IN1		0xc0000060
		>;
	};
};


